<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBalance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorBalance</item>
    </style>

    <style name="MyRadioButtonProgram1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorSuperFit</item>
        <item name="colorControlActivated">@color/colorSuperFit</item>
    </style>

    <style name="MyRadioButtonProgram2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorFit</item>
        <item name="colorControlActivated">@color/colorFit</item>
    </style>

    <style name="MyRadioButtonProgram3" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBalance</item>
        <item name="colorControlActivated">@color/colorBalance</item>
    </style>

    <style name="MyRadioButtonProgram4" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorStrong</item>
        <item name="colorControlActivated">@color/colorStrong</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CalenderViewMonthCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
