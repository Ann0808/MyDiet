<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bigLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBalanceLight"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/settingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:text="Мои данные"

                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/titleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:text="Имя:"
                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ваше имя"
                    android:inputType="textCapSentences"
                    android:textColor="@color/colorWhite"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textSize="20sp"
                    android:maxLength="15"
                    android:layout_gravity="center_vertical"

                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@null"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/titleSpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Программа:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >

                <RadioButton
                    android:id="@+id/radio_superfit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="SuperFit 1000 kcal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:theme="@style/MyRadioButtonProgram1"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="false"/>

                <RadioButton
                    android:id="@+id/radio_fit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fit 1300 kcal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:theme="@style/MyRadioButtonProgram2"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="false"
                    />

                <RadioButton
                    android:id="@+id/radio_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Balance 1500 kcal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:theme="@style/MyRadioButtonProgram3"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:clickable="false"/>

                <RadioButton
                    android:id="@+id/radio_strong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Strong 2000 kcal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:theme="@style/MyRadioButtonProgram4"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="false"/>

            </RadioGroup>

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Дата начала диеты:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/datePickerL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <CalendarView
                android:id="@+id/datePicker"
                android:calendarViewShown="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:theme="@style/CalenderViewCustom"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"

                >

            </CalendarView>
        </LinearLayout>

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ок"
                android:visibility="invisible"
                android:background="@drawable/custom_shape3"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </LinearLayout>
    </ScrollView>




</LinearLayout>