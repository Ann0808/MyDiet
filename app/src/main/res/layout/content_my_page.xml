<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/backdark" />

    <LinearLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/colorDaysDay"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/bigLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/settingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/kurale_regular"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="6"

                        android:text="Мои данные"
                        android:textColor="@color/colorWhite"
                        android:textColorLink="@color/colorWhite"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/robotoreg"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="6"
                        android:text="Имя:"
                        android:textColor="@color/colorWhite"
                        android:textColorLink="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/robotoreg"
                        android:hint="Ваше имя"
                        android:inputType="textCapSentences"
                        android:maxLength="15"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/titleSpin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/robotoreg"
                    android:paddingRight="5dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:text="Программа:"
                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/programL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/program"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/robotoreg"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:textColor="@color/colorWhite"
                        android:textColorLink="@color/colorWhite"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/radioL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <RadioButton
                            android:id="@+id/radio_superfit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:clickable="false"
                            android:fontFamily="@font/robotoreg"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:text="Slim 1000 kcal"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:theme="@style/MyRadioButtonProgram1"
                            android:translationX="30dp" />

                        <RadioButton
                            android:id="@+id/radio_fit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:fontFamily="@font/robotoreg"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:text="Fit 1300 kcal"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:theme="@style/MyRadioButtonProgram2"
                            android:translationX="30dp" />

                        <RadioButton
                            android:id="@+id/radio_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:fontFamily="@font/robotoreg"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:text="Balance 1800 kcal"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:theme="@style/MyRadioButtonProgram3"
                            android:translationX="30dp" />

                        <RadioButton
                            android:id="@+id/radio_strong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:clickable="false"
                            android:fontFamily="@font/robotoreg"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:shadowColor="@color/colorPrimaryDark"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:text="Sport 2500 kcal"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:theme="@style/MyRadioButtonProgram4"
                            android:translationX="30dp" />

                    </RadioGroup>

                </LinearLayout>


                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/robotoreg"
                    android:paddingRight="5dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:text="Дата начала диеты:"
                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/robotoreg"
                    android:paddingRight="5dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/datePickerL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <CalendarView
                        android:id="@+id/datePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:calendarViewShown="false"
                        android:dateTextAppearance="@style/CalenderViewDateCustomText"
                        android:theme="@style/CalenderViewCustom"
                        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"

                        >

                    </CalendarView>
                </LinearLayout>


                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_shape3"
                    android:fontFamily="@font/kurale_regular"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Сохранить"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_shape3"
            android:fontFamily="@font/kurale_regular"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Редактировать"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

    </LinearLayout>


</RelativeLayout>