<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollingrec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below = "@+id/scrollingrec">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                tools:ignore="Suspicious0dp"
                android:visibility="invisible"
                android:fontFamily="@font/robotoreg"></TextView>

                <TextView
                    android:id="@+id/nameDish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Название"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/kurale_regular"
                    android:textSize="20sp"
                    ></TextView>


            <ImageView
                android:id="@+id/photoRecept"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="@string/ingridients"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/kurale_regular"
                android:textSize="20sp"
                ></TextView>

            <TextView
                android:id="@+id/ingridients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:text="TextView"
                android:fontFamily="@font/robotoreg"/>

            <TextView
                android:id="@+id/tvPage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text="@string/recipe"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/kurale_regular"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textSize="17sp"
                android:fontFamily="@font/robotoreg"/>

            <TextView
                android:id="@+id/tvPage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:fontFamily="@font/kurale_regular"
                android:textSize="20sp"/>

            <!--<TextView-->
                <!--android:id="@+id/next"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:gravity="center"-->
                <!--android:text="Листните ⟶"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:shadowColor="@color/colorPrimaryDark"-->
                <!--android:shadowDx="2"-->
                <!--android:shadowDy="2"-->
                <!--android:shadowRadius="3"-->
                <!--android:textStyle="bold"-->
                <!--android:visibility="invisible"-->
                <!--&gt;</TextView>-->

        </LinearLayout>
    </ScrollView>


</RelativeLayout>