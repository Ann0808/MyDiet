<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/biglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back4" />

    <LinearLayout
        android:id="@+id/laySex"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="@string/hello"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Укажите Ваш пол:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="180dp" />

            <RadioGroup
                android:id="@+id/radioGroupSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="280dp"
                android:background="@color/colorGrey"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Жен"
                android:textColor="@color/colorBalance"
                android:textSize="20sp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:theme="@style/MyRadioButton"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="30dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Муж"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:theme="@style/MyRadioButton"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:translationX="30dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />
            </RadioGroup>


            <Button
                android:id="@+id/buttonNextSex"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_shape_balance"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:text="Далее"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/scrollBodyParams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/layBodyParams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
        android:id="@+id/textViewheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:paddingLeft="10dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="Ваш рост(см):"
        android:textColor="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/growth"
            android:maxLength="3"
            android:digits="0123456789"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:gravity="center"
            android:textSize="50sp"
            android:background="@color/colorWhite"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"
            android:hint="165"
            android:textColorHint="@color/colorDaysLight"/>

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="Ваш вес(кг):"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:maxLength="3"
            android:digits="0123456789"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="50sp"
            android:hint="70"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/colorDaysLight"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:paddingLeft="10dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="Ваш возраст:"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/Age"
            android:maxLength="3"
            android:digits="0123456789"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="50sp"
            android:hint="30"
            android:textColorHint="@color/colorDaysLight"
            android:inputType="numberDecimal"/>


    </LinearLayout>
        <Button
            android:id="@+id/buttonNextBodyParams"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_shape_balance"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="Далее"
            android:layout_gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scrollGoal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textViewGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Ваша цель:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <RadioGroup
                android:id="@+id/radioGroupGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorGrey"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@id/textViewGoal"
                >

                <RadioButton
                    android:id="@+id/radio_GoalSlim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Похудеть"
                    android:textColor="@color/colorBalance"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio_GoalBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Поддержать форму"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:id="@+id/radio_GoalStrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Набрать вес"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:textStyle="bold" />

            </RadioGroup>

        <Button
            android:id="@+id/buttonNextGoal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_shape_balance"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="Далее"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scrollActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:visibility="invisible">

            <TextView
                android:id="@+id/textViewMyActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="Физическая активность:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <RadioGroup
                android:id="@+id/radioGroupActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="40dp"
                android:layout_below="@id/textViewMyActive"
                android:background="@color/colorGrey"
                >

                <RadioButton
                    android:id="@+id/radio_lazyActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Не занимаюсь"
                    android:textColor="@color/colorBalance"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:id="@+id/radio_balanseActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1-2 раза в неделю"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:id="@+id/radio_strongActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Почти каждый день"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"
                    android:theme="@style/MyRadioButton"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:translationX="30dp"
                    android:textStyle="bold"/>

            </RadioGroup>

        <!--</LinearLayout>-->
        <Button
            android:id="@+id/buttonNextActivity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_shape_balance"
            android:gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="Далее"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollChooseProgram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/layChooseProgram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/textViewChooseProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Выберите программу: "
                />

            <TextView
                android:id="@+id/recomendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
               />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scrollCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/layCalendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textViewCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="Первый день диеты:"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <CalendarView
                android:id="@+id/datePicker"
                android:calendarViewShown="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhite"
                android:unfocusedMonthDateColor="@color/colorBalance"
                >

            </CalendarView>
            <Button
                android:id="@+id/buttonFinish"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_shape_balance"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="Готово"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>